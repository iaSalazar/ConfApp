<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SpeakerPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImageViewHome"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp">

        </ImageView>


        <TextView
            android:id="@+id/SpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHomeSubtitulo"
            android:layout_marginTop="@dimen/marginHomeSubtitulo"
            android:text="Nombre expositor"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/tamanioTitulo"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>



        <TextView
            android:id="@+id/SpeakerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHomeSubtitulo"
            android:layout_marginTop="@dimen/marginHomeSubtitulo"
            android:text="Trabajo expositor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/tamanioSubtitulo" />


    </LinearLayout>
</androidx.cardview.widget.CardView>